<?xml version="1.0" encoding="utf-8"?>
<log4net>
	<appender name="DebugAppender" type="log4net.Appender.DebugAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionpattern value="%date [%thread] %5level %logger %message%newline"/>
		</layout>
	</appender>
	<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionpattern value="%date [%thread] %5level %logger %message%newline"/>
		</layout>
	</appender>
	<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
		<!--<file value="Logs\logfile.txt"/> this settings will create log file in bin folder -->
		<file value="C:\Users\prach\source\repos\aspnetCore\CoreWebApiSuperHero\CoreWebApiSuperHero\Logs\logfile.txt"/>
		<rollingStyle value="Composite"/> 
		<maxSizeRollBackups value="5"/> <!-- Number of backup files to keep -->
		<maximumFileSize value="10MB"/> <!-- Maximum size of the log file -->
		<layout type="log4net.Layout.PatternLayout">
			<conversionpattern value="%date [%thread] %5level %logger %message%newline"/>
		</layout>
	</appender>
	<root>
		<level value="All"/>
		<appender-ref ref="DebugAppender"/>
		<appender-ref ref="ConsoleAppender"/>
		<appender-ref ref="RollingFileAppender"/>
	</root>

 </log4net>

<!-- Rolling Styles are :once,size,Date,Composite 
		Size : then it will create a new file when the size of the log file exceeds the specified size limit.default size is 10MB
		maxSizeRollBackups is used to specify the number of backup files to keep.eg. maxSizeRollBackups="5" will keep 5 backup files.
		maximumFileSize is used to specify the maximum size of the log file.eg. maximumFileSize="10MB" will set the maximum size of the log file to 10MB
		Composite:Date and Size are used to roll the file based on both date and size.
		Date: it will create a new file when the date changes. -->